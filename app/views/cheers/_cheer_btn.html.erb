<% if post.cheered_by?(current_user) %>
  <%= link_to post.cheers.count, post_cheers_path(post), method: :delete, remote: true, class: "fas fa-flag", style: "color:#FF6347" %>
<% else %>
  <%= link_to post.cheers.count, post_cheers_path(post), method: :post, remote: true, class: "far fa-flag", style: "color:#FF6347" %>
<% end %>