<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #F8E00E;">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag "logo4.png", size: "60x40" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to root_path, class: "nav-link" do %>
              <i class="fas fa-home fa-fw"></i> ホーム
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class: "nav-link" do %>
              <i class="fas fa-paper-plane fa-fw"></i> 投稿
            <% end %>
          </li>
          <li>
            <%= link_to spots_path, class: "nav-link" do %>
              <i class="fas fa-map-marker-alt fa-fw"></i> スポット
            <% end %>
          </li>
          <li>
            <%= link_to users_path, class: "nav-link" do %>
              <i class="fas fa-users fa-fw"></i> ユーザ
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user), class: "nav-link" do %>
              <i class="fas fa-user fa-fw"></i> マイページ
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt fa-fw"></i> ログアウト
            <% end %>
          </li>
