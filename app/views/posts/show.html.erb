<div class="container px-5 my-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <%= link_to "New", new_post_path, class: "btn btn-primary" %>
      <div>
        <%= attachment_image_tag @post.user, :profile_image, size:"60x60", fallback: "cheer.png" %>
        <%= @post.user.name %>
        <%= @post.content %><br>
        <%= attachment_image_tag @post, :image, size:"500x500" %><br>
        <%= l @post.created_at %>
        <%= @post.category %>
    	  <% if @post.cheered_by?(current_user) %>
          <%= link_to @post.cheers.count, post_cheers_path(@post), method: :delete, local: true, class: "fas fa-flag" %>
        <% else %>
          <%= link_to @post.cheers.count, post_cheers_path(@post), method: :post, local: true, class: "far fa-flag" %>
        <% end %>
        <%= @post.post_comments.count %>コメント
        <br>
        <% if @post.user == current_user %>
          <%= link_to "Destroy", post_path(@post), method: :delete %>
        <% else %>
          <% if current_user.following?(@post.user) %>
            <%= link_to "フォロー外す", user_relationships_path(@post.user), method: :delete, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@post.user), method: :post, class: "btn btn-success" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <table class="table">
        <% @post.post_comments.each do |post_comment| %>
          <% post_comment_user = post_comment.user %>
          <tr>
          	<td>
          		<%= link_to user_path(post_comment_user), class: "user_#{post_comment_user.id}" do %>
            		<%= attachment_image_tag post_comment_user, :profile_image, fallback: "cheer.png", size: "50x50" %><br>
            		<%= post_comment_user.name %>
          		<% end %>
          	</td>
          	<td><%= post_comment.comment %></td>
          	<% if current_user == post_comment_user %>
            	<td><%= link_to 'Destroy', post_post_comment_path(post_comment.post_id, post_comment.id), class: 'btn-sm btn-danger', method: :delete, local: true %></td>
          	<% end %>
          </tr>
        <% end %>
      </table>
      <%= form_with model:[@post,@post_comment] do |f| %>
        <%= f.text_area :comment, size:"50x2" %>
        <%= f.submit '送信'%>
      <% end %>
      <%= link_to "Back", posts_path %>
    </div>
  </div>
</div>