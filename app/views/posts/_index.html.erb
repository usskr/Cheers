<% posts.each do |post| %>
  <div id="post_<%= post.id %>", class="mb-5">
    <%= attachment_image_tag post.user, :profile_image, size:"60x60", fallback: "cheer.png" %>
    <%= post.user.name %>
    <%= post.content %>
    <%= attachment_image_tag post, :image, size:"150x150" %><br>
    <%= l post.created_at, format: :short %><br>
    <%= render "posts/category", post: post %>
    <span class="cheer_btn"><%= render "cheers/cheer_btn", post: post %></span>
    <span class="comments_count"><%= post.post_comments.count %>コメント</span>
    <%= link_to "Show", post_path(post) %>
  </div>
<% end %>