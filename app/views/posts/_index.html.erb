<% posts.each do |post| %>
  <%= link_to post_path(post) do %>
    <div class="post_index">
      <table class="table">
        <tr>
          <td style="width: 20%" class="align-middle">
            <%= attachment_image_tag post.user, :profile_image, size: "60x60", fallback: "cheer.jpeg", style: "border-radius: 50%" %>
            <%= post.user.name %>
          </td>
          <td style="width: 80%" class="align-middle">
            <%= safe_join(post.content.split("\n"),tag(:br)) %><br>
            <% if post.spot %>
              <%= link_to "ï¼ #{post.spot.address}", spot_path(post.spot) %>
            <% end %>
          </td>
        </tr>
      </table>
      <div class="text-center mb-3 px-5">
        <%= attachment_image_tag post, :image, class: "w-100", style: "border-radius: 3%" %>
      </div>
      <div class="d-flex justify-content-around pb-2"  id="post_<%= post.id %>">
        <div><%= render "posts/category", post: post %></div>
        <div class="cheer_btn"><%= render "cheers/cheer_btn", post: post %></div>
        <div class="comments_count"><%= render "post_comments/comment_btn", post: post %></div>
        <div><%= l post.created_at, format: :short %></div>
      </div>
    </div>
  <% end %>
<% end %>