<% if post.category == "食事" %>
  <%= link_to "/posts?category=0" do %>
    <i class="fas fa-utensils"></i>
  <% end %>
<% elsif post.category == "運動" %>
  <%= link_to "/posts?category=1" do %>
    <i class="fas fa-dumbbell"></i>
  <% end %>
<% elsif post.category == "おすすめ" %>
  <%= link_to "/posts?category=2" do %>
    <i class="fas fa-bullhorn"></i>
  <% end %>
<% else %>
  <%= link_to "/posts?category=3" do %>
    <i class="fas fa-heart-broken"></i>
  <% end %>
<% end %>