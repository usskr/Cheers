<% if post.category == "食事" %>
  <%= link_to post_path(post) do %>
    <i class="fas fa-utensils"></i>
  <% end %>
<% elsif post.category == "運動" %>
  <%= link_to post_path(post) do %>
    <i class="fas fa-dumbbell"></i>
  <% end %>
<% elsif post.category == "おすすめ" %>
  <%= link_to post_path(post) do %>
    <i class="fas fa-bullhorn"></i>
  <% end %>
<% else %>
  <%= link_to post_path(post) do %>
    <i class="fas fa-dizzy"></i>
  <% end %>
<% end %>