<div class="container px-5 my-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <h3 class="text-center">新規投稿</h3>
      <%= form_with model: @post, local:true do |f| %>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.attachment_field :image, class: "form-control-file" %>
        </div>
        <img id="preview" style="width:40%;">
        <div class="form-group">
          <%= f.label :category, "カテゴリ" %>
          <%= f.select :category, Post.categories.keys, {prompt: '選択してください'}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.fields_for @post.spot do |s| %>
            <%= s.label :address, "場所(Google Mapで検索)" %>
            <%= s.text_field :address, placeholder: "スポットを入力", id: "address", class: 'form-control' %>
            <input type="button" value="検索" onclick="codeAddress()">
            <div id="map", style="height: 320px; width: 640px;"></div>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag "post.js" %>
<%= javascript_include_tag "googlemap.js" %>