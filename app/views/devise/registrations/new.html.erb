<div class="container mt-5">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-5 col-md-4 col-lg-3 px-5 px-sm-0 mx-auto mt-5 text-center">
      <h2>アカウント作成</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="form-group mt-5 mb-4">
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザ名", class:"form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）", class:"form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "登録", class:"btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>