<div class="container mt-5">
  <div class="row">
    <div class="col-sm-5 col-md-4 col-lg-3 px-5 px-sm-0 mt-5 mx-auto text-center">
      <h2>ログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group mt-5 mb-4">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザ名", class:"form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group my-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>