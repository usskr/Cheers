<div class="container px-5 my-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= attachment_image_tag @user, :profile_image, size:"100x100", fallback: "cheer.png" %>
      <table class="table">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>email</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <% if @user == current_user %>
        <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>